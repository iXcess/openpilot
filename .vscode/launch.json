{
  "version": "0.2.0",
  "inputs": [
    {
      "id": "python_process",
      "type": "pickString",
      "description": "Select the process to debug",
      "options": [
        "selfdrive/controls/controlsd.py",
        "selfdrive/navd/navd.py",
        "system/timed/timed.py",
        "tools/sim/run_bridge.py",
        "selfdrive/modeld/modeld.py"
      ]
    },
    {
      "id": "cpp_process",
      "type": "pickString",
      "description": "Select the process to debug",
      "options": [
        "selfdrive/ui/ui",
      ]
    },
    {
      "id": "args",
      "description": "Arguments to pass to the process",
      "type": "promptString"
    }
  ],
  "configurations": [
    {
    "name": "(gdb) Attach Cython",
    "type": "cppdbg",
    "request": "attach",
    "program": "/usr/bin/python3",
    "additionalSOLibSearchPath":"${workspaceRoot}",
    "processId": "${command:pickProcess}",
    "MIMode": "gdb",
    "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "ignore SIGUSR2 signal",
                    "text": "handle SIGUSR2 nostop noprint pass"
                }
              ]
    },
    {
      "name": "Python: openpilot Process",
      "type": "debugpy",
      "request": "launch",
      "program": "${input:python_process}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "args": "${input:args}"
    },
    {
      "name": "C++: openpilot Process",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/${input:cpp_process}",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "C/C++: aarch64-linux-gnu-g++ build and debug active file",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ],
      "preLaunchTask": "C/C++: aarch64-linux-gnu-g++ build active file",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}